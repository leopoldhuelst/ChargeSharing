<div>
  <div class="logo">
    <h2>Order summary</h2>
  </div>
  <div class="tab-card-stop-booking" data-controller="new-review" data-new-review-seconds-value="<%= @review.booking.duration %>">
    <h3>Payment Successful</h3>
    <div class="tab-content-separator"></div>
    <h3>Duration </h3>
    <p id="duration-booking" data-new-review-target="duration">00:00:00</p>
    <div class="tab-content-separator"></div>
    <h3>Cost </h3>
    <p>$<%= @review.booking.cost %></p>
    <button id="review-button" data-new-review-target="tab">Write Review + <i class="far fa-keyboard"></i></button>
    <div id="add-review" class="d-none" data-new-review-target="form">
      <%= simple_form_for [ @booking, @review ] do |f| %>
      <div class="form-inputs">
        <%= f.input :rating %>
        <%= f.input :contents %>
      </div>
      <div class="tab-content-separator"></div>
      <div class="submit-buttons">
        <%= f.button :submit, "Submit" %>
      </div>
      <% end %>
    </div>
  </div>
  <div>
    <%# <%= link_to "Go back to Home", roots_path %>
  </div>
</div>

