<%# tab HTML's %>

<%# home tab HTML%>



<div id="tab-1-content">
  <div class="tab-card">
    <h2>Latest booking</h2>
    <% inactive_bookings = @user.bookings.where("status = 1") %>
    <% unless inactive_bookings.empty? %>
      <div class="tab-content-separator"></div>
      <p><%= inactive_bookings[-1].created_at.strftime('%A, %d %b') %></p>
      <p><%= inactive_bookings[-1].created_at.strftime('%l:%M %p') %> - <%=  (inactive_bookings[-1].created_at + (inactive_bookings[-1].duration / 60)).strftime('%l:%M %p') %></p>
      <p><%= inactive_bookings[-1].plug.location%></p>
    <p>Write Review + <i class="far fa-keyboard"></i></p>
    <% else %>
      <div class="tab-content-separator"></div>
      <p>No bookings yet</p>
      <p><%= link_to 'Go to map', root_path, style: "z-index:99999" %></p>
    <% end %>
  </div>
</div>

<%# Reviewstab HTML %>

<div id="tab-2-content">
  <div class="tab-card">
    <h3>Written Reviews <i class="fas fa-paper-plane"></i></h3>
      <% if @user.reviews.last %>
        <% @user.reviews.each do |review| %>
          <div class="tab-content-separator"></div>
          <% num = review.rating.to_i %>
          <p>
            <% num.times do %>
              <i class="fas fa-star small "></i>
            <% end %>
            <% (5-num).times do %>
              <i class="far fa-star small "></i>
            <% end %>
          </p>
          <p>"<%= review.contents %>"</p>
          <%# <p>by <%= review.booking.plug.user.first_name %> <%#= review.booking.plug.user.last_name %></p>
          <p><%= review.booking.created_at.strftime('%A, %d %b') %></p>
        <% end %>
      <% else %>
        <div class="tab-content-separator"></div>
        <p>No reviews yet</p>
        <p><%= link_to 'Go to map', root_path, style: "z-index:99999" %></p>
      <% end %>
  </div>
  <div class="tab-card">
    <h3>Received Reviews <i class="fas fa-mail-bulk"></i></h3>
    <% if @user.reviews_as_owner.last %>
      <% @user.reviews_as_owner.each do |review| %>
        <div class="tab-content-separator"></div>
        <% num = review.rating.to_i %>
        <p>
          <% num.times do %>
            <i class="fas fa-star small "></i>
          <% end %>
          <% (5-num).times do %>
            <i class="far fa-star small "></i>
          <% end %>
        </p>
        <p>"<%= review.contents %>"</p>
        <%# <p>by <%= review.booking.user.first_name %> <%#= review.booking.user.last_name %></p>
        <p><%= review.booking.created_at.strftime('%A, %d %b') %></p>
      <% end %>
    <% else %>
      <div class="tab-content-separator"></div>
      <p>No received reviews yet</p>
      <p><%= link_to 'Go to map', root_path, style: "z-index:99999" %></p>
    <% end %>
  </div>
</div>


<%# Bookings-tab HTML %>


<div id="tab-3-content"  class="select">
  <div class="tab-card">
    <h3>Booking History <i class="fas fa-book"></i></h3>
    <% unless @user.bookings.empty? %>
      <% inactive_bookings.each do |booking| %>
        <div class="tab-content-separator"></div>
        <p><%= booking.created_at.strftime('%A, %d %b') %></p>
        <p><%= booking.created_at.strftime('%l:%M %p') %> - <%=  (booking.created_at + booking.duration.seconds).strftime('%l:%M %p') %></p>
        <p><%= booking.plug.location%></p>
      <% end %>
    <% else %>
      <div class="tab-content-separator"></div>
      <p>No booking history yet</p>
      <p><%= link_to 'Go to map', root_path, style: "z-index:99999" %></p>
    <% end %>
  </div>
  <div class="tab-card">
    <h3 class="mb-4">Plug Booking History <i class="fas fa-charging-station"></i></h3>
    <% if @user.plugs.last %>
      <% @user.plugs.each do |plug| %>
        <p>Your plug at <%= plug.location %></p>
        <% if plug.bookings.last %>
          <% plug.bookings.each do |booking| %>
            <div class="tab-content-separator"></div>
            <p><%= booking.user.first_name %> <%= booking.user.last_name %></p>
            <p><%= booking.created_at.strftime('%A, %d %b') %></p>
            <p><%= booking.created_at.strftime('%l:%M %p') %> - <%=  (booking.created_at + booking.duration.minutes).strftime('%l:%M %p') %></p>
          <% end %>
        <% else %>
          <div class="tab-content-separator"></div>
          <p>Sorry, your plug wasn't booked yet...</p>
        <% end %>
      <% end %>
    <% else %>
      <div class="tab-content-separator"></div>
      <p>You haven't added a plug yet</p>
      <p><%= link_to 'Add plug', root_path, style: "z-index:99999" %></p>
    <% end %>
  </div>
</div>
